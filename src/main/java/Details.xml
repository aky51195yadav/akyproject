<?xml version="1.0" encoding="UTF-8"?>

<beans  xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        <bean id="dmds" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
           <property name="url" value="jdbc:sqlserver://localhost;databaseName=MyDatabase"></property>
           <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"></property>
           <property name="username" value="sa"></property>
           <property name="password" value="12345"></property>
        </bean>
        <bean id="jtemp" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dmds"></property>
        </bean>
        <bean id="edao" class="com.example.demo.app.MainController">
        <property name="jdbcTemplate" ref="jtemp"></property>
        </bean>
</beans>